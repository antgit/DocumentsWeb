@if(Utils.IsIE6()) {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/ie6.css")" />
}

@{
    string theme_name = "Office2010Blue";
}

@Html.DevExpress().GetStyleSheets(
        new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout, Theme = theme_name },
        new StyleSheet { ExtensionSuite = ExtensionSuite.Editors, Theme = theme_name },
        new StyleSheet { ExtensionSuite = ExtensionSuite.HtmlEditor, Theme = theme_name },
        new StyleSheet { ExtensionSuite = ExtensionSuite.GridView, Theme = theme_name },
        new StyleSheet { ExtensionSuite = ExtensionSuite.Chart, Theme = theme_name },
        new StyleSheet { ExtensionSuite = ExtensionSuite.Report, Theme = theme_name }
) 

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Platform.css")" />
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />

<script src="@Url.Content("~/Scripts/Demo.js")" type="text/javascript"></script>
