            item.ToolTip = report.Memo;
            item.Target = "_blank";
            if (report != null)
            {
                //item.NavigateUrl = ReportHelper.GetPrintReportNavigateUrlInternal(report);
                item.NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Report", Action = "Build", Area = "Reports" }) + "?id=" + report.Id;
